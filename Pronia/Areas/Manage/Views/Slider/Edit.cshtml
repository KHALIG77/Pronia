@model Slider

@{
    ViewData["Title"] = "Create";

}
<div class="row justify-content-center">
    <div class="col-md-8">
        <h1>Create</h1>
        <form method="post" asp-action="edit" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Order">Order</label>
                <input type="text" class="form-control" asp-for="Order">
                <span asp-validation-for="Order"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input type="text" class="form-control" asp-for="Title">
                <span asp-validation-for="Title"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Desc</label>
                <textarea class="form-control" asp-for="Description" rows="2"></textarea>
                <span asp-validation-for="Description"></span>
            </div>
            <div class="form-group">
                <label asp-for="ButtonText">ButtonText</label>
                <input type="text" class="form-control" asp-for="ButtonText">
                <span asp-validation-for="ButtonText"></span>
            </div>
            <div class="form-group">
                <label asp-for="Offer">Offer</label>
                <input type="text" class="form-control" asp-for="Offer">
                <span asp-validation-for="Offer"></span>
            </div>
            <div class="form-group">
                <label asp-for="ButtonUrl">ButtonUrl</label>
                <input type="text" class="form-control" asp-for="ButtonUrl">
                <span asp-validation-for="ButtonUrl"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile">Image</label>
                <input class="form-control" asp-for="ImageFile">
                <span asp-validation-for="ImageFile"></span>
              <img width="100" src="~/uploads/slider-inner/@Model.ImageUrl"/>

            </div>
            <div class="form-group">
                <label asp-for="BgImageFile">BgImageFile</label>
                <input class="form-control" asp-for="BgImageFile">
                <span asp-validation-for="BgImageFile"></span>
                <img width="100" src="~/uploads/slider-bg/@Model.BgUrl"/>
                

            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
@section Scripts{
    @Html.Partial("_ValidationScripsPartial");
}
