
@model SettingsViewModel


<div class="row justify-content-center">
    <div class="col-md-8">
        <h1>Settings</h1>
        <form method="post" asp-action="index" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Address"></label>
                <input type="text" class="form-control" asp-for="Address">
                <span asp-validation-for="Address"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactPhone">ContactPhone</label>
                <textarea type="text" class="form-control" asp-for="ContactPhone"></textarea>
                <span asp-validation-for="ContactPhone"></span>
            </div>

            <div class="form-group">
                <label asp-for="SupportPhone">SupportPhone</label>
                <input class="form-control" asp-for="SupportPhone" rows="2">
                <span asp-validation-for="SupportPhone"></span>
            </div>
           
           

            
            <div class="form-group">
                <label asp-for="FileHeader">FileHeader</label>
                <input class="form-control" asp-for="FileHeader">
                <span asp-validation-for="FileHeader"></span>
                @if (Model.HeaderLogo!=null)
                {
         
                            <div class="img-box" style="position:relative;margin-right:14px">
                                <span class="remove-icon">x</span>
                                <input type="hidden" value="@Model.HeaderLogo" name="headerlogo">
                                <img width="200" src="~/uploads/settings/@Model.HeaderLogo"/>
                            </div>

                }


            </div>
            <div class="form-group">
                <label asp-for="FileFooter">FileFooter</label>
                <input class="form-control" asp-for="FileFooter">
                <span asp-validation-for="FileFooter"></span>
                @if (Model.FooterLogo != null)
                {

                    <div class="img-box" style="position:relative;margin-right:14px">
                        <span class="remove-icon">x</span>
                        <input type="hidden" value="@Model.FooterLogo" name="footerlogo">
                        <img width="200" src="~/uploads/settings/@Model.FooterLogo"/>
                    </div>

                }


            </div>
          

            <button type="submit" class="btn btn-primary">Submit</button>
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        </form>
    </div>
</div>
@section Scripts{
    @Html.Partial("_ValidationScripsPartial");
}



