@model UserRegisterViewModel

<div class="col-lg-6 pt-5 pt-lg-0">
    <form asp-action="register">
        <div class="login-form">
            <h4 class="login-title">Register</h4>
            <div class="row">
                <div class="col-md-6 col-12">
                    <label asp-for="FullName">FullName</label>
                    <input asp-for="FullName" placeholder="FullName" />
                    <span class="text-danger" asp-validation-for="FullName"></span>
                </div>
                <div class="col-md-6 col-12">
                    <label asp-for="UserName">UserName</label>
                    <input asp-for="UserName" placeholder="UserName" />
                    <span class="text-danger" asp-validation-for="UserName"></span>
                </div>
                
                <div class="col-md-12">
                    <label asp-for="Email">Email Address*</label>
                    <input asp-for="Email" placeholder="Email Address" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" placeholder="Password" />
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>
                <div class="col-12">
                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                        Register
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>

@section Validation{
    @Html.Partial("_ValidationScriptsPartial");
}
