@model ForgetPasswordViewModel

<div class="d-flex justify-content-center align-items-center">
<div class="col-lg-4">
    <form asp-action="forgetpassword" method="post">
        <div class="login-form">
            <h4 class="login-title">Confirm Email</h4>
            <div class="row">
                <div class="col-lg-12">
                    <label>Email Address*</label>
                    <input asp-for="Email" placeholder="Email Address"/>
                </div>
                <div class="mt-md-0 text-danger" asp-validation-summary="ModelOnly">
                </div>

                <div class="col-lg-12 pt-5">
                    <button  class="btn btn-custom-size lg-size btn-pronia-primary">
                        Send
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
</div>



