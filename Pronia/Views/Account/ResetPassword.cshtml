@model ResetPasswordViewModel
<div class="d-flex align-items-center justify-content-center">
<div class="col-lg-4">
    <form asp-action="resetpassword" method="post">
        <div class="login-form">
            <h4 class="login-title">Login</h4>
            <div class="row">
                <div class="col-lg-12">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" placeholder="Password" />
                </div>
                <div class="col-lg-12">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                </div>
                <div class="mt-md-0 text-danger" asp-validation-summary="ModelOnly">
                </div>

                <div class="col-lg-12 pt-5">
                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                        Login
                    </button>
                </div>
            </div>
        </div>
        <input value="@ViewBag.Email" type="hidden" asp-for="Email">
        <input value="@ViewBag.Token" type="hidden" asp-for="Token"> 
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    </form>
</div>
</div>

